@model IptProject.Models.Attendance.SectionVM
@{
    ViewBag.Title = "ChooseSection";
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
}

<h2>Choose Section</h2>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Manage Attendance</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("ChooseSection", "AttendanceTeacher", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="row">
                                <div class="col-md-4" hidden>
                                    <div class="form-group">
                                        <label>Name</label>

                                        <input type="text" value="@Model.EmpName" name="EmpName" />
                                    </div>
                                </div>
                                <div class="col-md-4" hidden>
                                    <div class="form-group">
                                        <label>Course</label>

                                        <input type="text" value="@Model.CourseID" name="CourseID" />
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Section</label>

                                        <select class="form-control" name="SectionName" id="SectionName" required>

                                            <option selected hidden disabled>Select Section</option>
                                            @for (int i = 0; i < Model.sections.Count; i++)
                                            {
                                                var item = Model.sections[i];
                                                <option value="@item.SectionName"> @item.SectionName </option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 ">
                                    <input type="submit" class="btn btn-success" value="Save" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>