@*@model IList<IptProject.Models.Attendance.CheckStudentAttendance>*@
@using IptProject.Models.Attendance
@model CoursesVM

@{
    ViewBag.Title = "ViewAttendance";
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
}

<h2>View Attendance</h2>
<div class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <!-- Card header: all courses name come here -->
                    <div class="card-header card-header-tabs card-header-primary">

                        <div class="nav-tabs-navigation content-center">
                            <div class="nav-tabs-wrapper">
                                <!--<h2 class="nav-tabs-title center-block"><b>Courses:</b></h2>-->
                                <ul class="nav nav-tabs" data-tabs="tabs">

                                    @foreach (var item in Model.allStudentCourses)
                                    {
                                        if (item.CourseStatus != "DROP" && item.CourseStatus != "WITHDRAW")
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link active" href="/AttendanceStudent/ViewAttendance/@item.CourseID">

                                                    <i class="material-icons">menu_book</i> @item.CourseCode @item.CourseName
                                                    <div class="ripple-container"></div>
                                                </a>
                                                <p> </p>
                                            </li>

                                        }

                                    }
                                </ul>
                            </div>
                        </div>
                    </div>

                    @if (Model.studentcourseattendances.Count != 0)
                    {

                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active table-responsive" id="profile">
                                    <table class="table table-hover table-bordered">
                                        <thead class="card-header card-header-primary">
                                            <tr>
                                                <th scope="col">Lecture #</th>
                                                <th scope="col">Date</th>
                                                <th scope="col">Duration</th>
                                                <th scope="col">Presence</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{

                                                int i = 0;

                                                foreach (var item in Model.studentcourseattendances)
                                                {

                                                    @*@for (int i = 0; i < Model.Count(); i++)*@
                                                    {
                                                        <tr>

                                                            <td>

                                                                @*@Html.DisplayFor(x => x.studentcourseattendances.Count)*@
                                                                @(i + 1)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.AttendanceDate)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.ClassDuration)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.AttendanceStatus)
                                                            </td>
                                                        </tr>

                                                        i++;
                                                    }

                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <div class="tab-pane table-responsive" id="messages">
                                    <table class="table table-hover table-bordered">
                                        <thead class="card-header card-header-primary">
                                            <tr>
                                                <th scope="col">Lecture #</th>
                                                <th scope="col">Date</th>
                                                <th scope="col">Duration</th>
                                                <th scope="col">Presence</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>1</td>
                                                <td>1-June-2020</td>
                                                <td>1</td>
                                                <td class="text-danger">A</td>
                                            </tr>
                                            <tr>
                                                <td>2</td>
                                                <td>2-June-2020</td>
                                                <td>1</td>
                                                <td>P</td>
                                            </tr>
                                            <tr>
                                                <td>3</td>
                                                <td>3-June-2020</td>
                                                <td>1</td>
                                                <td class="text-danger">A</td>
                                            </tr>
                                            <tr>
                                                <td>4</td>
                                                <td>4-June-2020</td>
                                                <td>1</td>
                                                <td>P</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="tab-pane table-responsive" id="settings">
                                    <table class="table table-hover table-bordered">
                                        <thead class="card-header card-header-primary">
                                            <tr>
                                                <th scope="col">Lecture #</th>
                                                <th scope="col">Date</th>
                                                <th scope="col">Duration</th>
                                                <th scope="col">Presence</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>1</td>
                                                <td>1-June-2020</td>
                                                <td>1</td>
                                                <td class="text-danger">A</td>
                                            </tr>
                                            <tr>
                                                <td>2</td>
                                                <td>2-June-2020</td>
                                                <td>1</td>
                                                <td class="text-danger">A</td>
                                            </tr>
                                            <tr>
                                                <td>3</td>
                                                <td>3-June-2020</td>
                                                <td>1</td>
                                                <td class="text-danger">A</td>
                                            </tr>
                                            <tr>
                                                <td>4</td>
                                                <td>4-June-2020</td>
                                                <td>1</td>
                                                <td class="text-danger">A</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>