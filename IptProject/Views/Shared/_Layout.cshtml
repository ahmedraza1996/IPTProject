                <li>@Html.ActionLink("About", "About", "Home", new { @class = "white-text" })</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home", new { @class = "white-text" })</li>
                <li>@Html.ActionLink("Bot", "Bot", "Home", new { @class = "white-text" })</li>

            </ul>
            <a href="#" data-activates="nav-mobile" class="button-collapse white-text"><i class="fa fa-anchor"></i></a>
        </div>
    </nav>
