@model IEnumerable<IptProject.Models.FYP.StudentDefense>

@{
    ViewBag.Title = "FypCards";
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
}

<h2>Defense Cards</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6 col-sm-6">
            <a href="">
                
                <div class="card card-stats">

                    <div class="card-header card-header-warning card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">insert_link</i>
                        </div>
                        @*<p class="card-category">Used Space</p>*@
                        <h3 class="card-title">
                            @item.ProjectName

                        </h3>
                        <div class="tim-typo" style="color:black">
                            @Html.ActionLink("Open", "ViewDefenseForm", new { title = item.ProjectName }, null)
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            @*<i class="material-icons text-success">money</i>*@
                            <a href="javascript:;"> </a>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>


