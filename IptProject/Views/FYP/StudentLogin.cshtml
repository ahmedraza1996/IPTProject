
@{
    ViewBag.Title = "TeacherLogin";
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
}

<h2>StudentLogin</h2>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Student Login</h4>
                        <p class="card-category"></p>
                    </div>
                    <div class="card-body">
                        <form class="col-md-12">
                            <div class="form-group">
                                <input type="text" class="form-control input-lg" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control input-lg" placeholder="Password">
                            </div>
                            <div class="form-group">
                                @*<button class="btn btn-primary btn-lg btn-block" type="submit" value="TeacherHome">Sign In</button>*@
                                <input type="button" value="Sign In" onclick="window.location.href='StudentHome';" class="btn btn-primary btn-lg btn-block" />
                            </div>
                        </form>


                        <br />
                        <br />


                    </div>
                </div>
            </div>

        </div>
    </div>
</div>